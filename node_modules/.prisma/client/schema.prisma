// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// add a test model
model Test {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String   @unique
  password  String
}

model Player {
  playerId       Int              @id @default(autoincrement())
  name           String
  money          Int
  inventoryItems InventoryItems[]
}

model Item {
  itemId         Int              @id @default(autoincrement())
  name           String
  price          Int
  store          Store?           @relation(fields: [storeId], references: [storeId])
  storeId   Int?
  inventoryItems InventoryItems[]
}

model Store {
  storeId Int    @id @default(autoincrement())
  name    String
  items   Item[]
}

model InventoryItems {
  playerItemId   Int     @id @default(autoincrement())
  player         Player? @relation(fields: [playerPlayerId], references: [playerId])
  playerPlayerId Int?
  item           Item?   @relation(fields: [itemItemId], references: [itemId])
  itemItemId     Int?
}
